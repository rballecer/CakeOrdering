<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:gravity="center"
    android:layout_weight="1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="CAKES R' US"
        android:textStyle="bold"
        android:textColor="#330450"
        android:gravity="center"
        android:textSize="40dp" />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="3"
        android:orientation="vertical"
        android:layout_weight="2.5">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textAlignment="center"
            android:layout_weight=".2"
            android:textColor="#5D05EC"
            android:gravity="center"
            android:textSize="25sp"
            android:textStyle="bold|italic"
            android:text="Select Shape: ">

        </TextView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                app:srcCompat="@drawable/square" />
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="100dp"
                android:layout_centerHorizontal="true"
                android:layout_height="100dp"
               android:layout_marginLeft="10dp"
                android:layout_alignParentBottom="true"
                app:srcCompat="@drawable/triangle" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="100dp"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_height="100dp"
                app:srcCompat="@drawable/round" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_weight=".3">
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radiogroupshape"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:text="Square" />

                <RadioButton
                    android:layout_width="0dp"
                    android:text="Triangle"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:layout_height="wrap_content"/>
                <RadioButton
                    android:layout_width="0dp"
                    android:text="Circle"
                    android:layout_weight="1"
                    android:layout_marginLeft="30dp"
                    android:layout_height="wrap_content"/>

            </RadioGroup>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textAlignment="center"
            android:layout_weight=".2"
            android:textColor="#5D05EC"
            android:gravity="center"
            android:text="Select Flavor: "
            android:textSize="25sp"
            android:textStyle="bold|italic">

        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="3"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_weight=".5">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radiogroupflavor"
                android:orientation="horizontal">
                <RadioButton
                    android:layout_width="0dp"
                    android:text="Strawberry"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <RadioButton
                    android:layout_width="0dp"
                    android:text="Mocha"
                    android:layout_weight="1"
                    android:layout_marginLeft="40dp"
                    android:layout_height="wrap_content"/>
                <RadioButton
                    android:layout_width="0dp"
                    android:text="Custard"
                    android:layout_weight="1"
                    android:layout_marginLeft="30dp"
                    android:layout_height="wrap_content"/>

            </RadioGroup>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textAlignment="center"
            android:layout_weight=".2"
            android:textColor="#5D05EC"
            android:gravity="center"
            android:text="Select Toppings: "
            android:textSize="25sp"
            android:textStyle="bold|italic">

        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="3"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_weight=".5">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radiogrouptoppings"
                android:orientation="horizontal">
                <RadioButton
                    android:layout_width="0dp"
                    android:text="Sprinkles"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <RadioButton
                    android:layout_width="0dp"
                    android:text="Fresh Fruits"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:layout_height="wrap_content"/>
                <RadioButton
                    android:layout_width="0dp"
                    android:text="Choco chips"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"/>

            </RadioGroup>
    </LinearLayout>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="25sp"
            android:textColor="#5D05EC"
            android:textStyle="bold|italic"
            android:layout_margin="10dp"
            android:text="MESSAGE: ">

        </TextView>

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:hint="Message"
            android:inputType="textLongMessage">

        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:gravity="center"
            android:onClick="submit"
            android:text="SUBMIT"
            android:textSize="25sp"
            android:textStyle="bold">

        </Button>

    </LinearLayout>

</LinearLayout>




